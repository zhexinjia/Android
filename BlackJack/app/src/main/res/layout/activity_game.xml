<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhexinj.blackjack.GameActivity"
    android:background="#145807"
    android:id="@+id/myLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard2"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard3"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="80dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard4"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="110dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard5"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="140dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard6"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="170dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard7"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard8"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="230dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealerCard9"
        android:layout_alignTop="@+id/dealerCard1"
        android:layout_marginLeft="260dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard2"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard3"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="80dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard4"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="110dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard5"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="140dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard6"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="170dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard7"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard8"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="230dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerCard9"
        android:layout_alignTop="@+id/playerCard1"
        android:layout_marginLeft="260dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:id="@+id/restartButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/handMoney"
        android:layout_alignBottom="@+id/restartButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand"
        android:id="@+id/passButton"
        android:layout_alignTop="@+id/hitButton"
        android:layout_toLeftOf="@+id/hitButton"
        android:layout_toStartOf="@+id/hitButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hit"
        android:id="@+id/hitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/playerCard6"
        android:layout_alignStart="@+id/playerCard6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+100"
        android:id="@+id/raiseButton"
        android:layout_above="@+id/playerCard9"
        android:layout_toLeftOf="@+id/minusButton"
        android:layout_toStartOf="@+id/minusButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/turnMoney"
        android:layout_below="@+id/dealerCard1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal"
        android:id="@+id/dealButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-100"
        android:id="@+id/minusButton"
        android:layout_above="@+id/playerCard9"
        android:layout_alignRight="@+id/restartButton"
        android:layout_alignEnd="@+id/restartButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/winnerTextView"
        android:layout_above="@+id/dealButton"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

</RelativeLayout>
